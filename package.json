{
  "name": "payment.css",
  "version": "1.0.3",
  "description": "A CSS library for displaying credit card icons elegantly and efficiently.",
  "main": "./dist/icons.min.css",
  "style": "./dist/icons.min.css",
  "scripts": {
    "compile": "sass ./icons.scss ./dist/icons.css --no-source-map",
    "minify": "cleancss -o ./dist/icons.min.css ./dist/icons.css",
    "build": "npm run compile && npm run minify"
  },
  "keywords": [
    "css",
    "icons",
    "credit cards",
    "payment",
    "UI",
    "design system"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ruxwez/payment.css"
  },
  "homepage": "https://github.com/ruxwez/payment.css",
  "author": "Ruxwez",
  "license": "MIT",
  "dependencies": {
    "clean-css-cli": "^5.6.2",
    "sass": "^1.69.0"
  }
}
